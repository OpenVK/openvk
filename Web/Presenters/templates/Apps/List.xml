{extends "../@listView.xml"}

{block title}
    Приложения
{/block}

{block header}
    Приложения

    <div n:if="$act === 'dev'" style="float: right;">
        <span><b>
            <a href="/editapp?act=create">Создать</a>
        </b></span>
    </div>
{/block}

{block tabs}
    <div n:attr="id => ($act === 'list' ? 'activetabs' : 'ki')" class="tab">
        <a n:attr="id => ($act === 'list' ? 'act_tab_a' : 'ki')" href="?act=list">Все приложения</a>
    </div>

    <div n:attr="id => ($act === 'installed' ? 'activetabs' : 'ki')" class="tab">
        <a n:attr="id => ($act === 'installed' ? 'act_tab_a' : 'ki')" href="?act=installed">Мои приложения</a>
    </div>

    <div n:attr="id => ($act === 'dev' ? 'activetabs' : 'ki')" class="tab">
        <a n:attr="id => ($act === 'dev' ? 'act_tab_a' : 'ki')" href="?act=dev">Управление</a>
    </div>
{/block}

{* BEGIN ELEMENTS DESCRIPTION *}

{block link|strip|stripHtml}
    /app{$x->getId()}
{/block}

{block preview}
    <img style="max-width: 75px;" src="https://c.tenor.com/1y8zDc-ll-EAAAAM/3d-saul-saul-goodman.gif" />
{/block}

{block name}
    {$x->getName()}
{/block}

{block description}
    {$x->getDescription()}
{/block}

{block actions}
    <a href="/app{$x->getId()}" class="profile_link">запустить</a>
    <a n:if="$x->isInstalledBy($thisUser)" href="/apps/uninstall?hash={rawurlencode($csrfToken)}&app={$x->getId()}" class="profile_link">отключить</a>
    <a n:if="$thisUser->getId() == $x->getOwner()->getId()" href="/editapp?app={$x->getId()}" class="profile_link">редактировать</a>
{/block}
