{var $microblogEnabled = isset($thisUser) ? $thisUser->hasMicroblogEnabled() : false}

{if $post->canBeViewedBy($thisUser ?? NULL)}

{if $microblogEnabled}
    {include "post/microblogpost.xml", post => $post, commentSection => $commentSection}
